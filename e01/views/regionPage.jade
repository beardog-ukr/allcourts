extends layout

block content
  nav(class="navbar navbar-default navbar-static-top",role="navigation")
    div(class="container")
      div(class="navbar-header")
        a(href="#",class="navbar-brand") #{regionStr}

      div(class="collapse navbar-collapse")
        ul(class="nav navbar-nav")
          li(class="active")
            a(href="#") Розклад
          li
            a(href="https://github.com/beardog-ukr/allcourts") Sources


  div(class="container")
    div(class="panel panel-default",id="requestDiv")
      div(class="panel-body")
        h2 Суди
        p(id="lastUpdateP")

        p(id="generateButtonP")
          a(class="btn btn-lg btn-primary",href="#",role="button",id="generate") Виконати запит &raquo;

        div(class="progress progress-striped active",id="requestProgress")
          div(class="progress-bar",role="progressbar",aria-valuenow="100",
            aria-valuemin="0",aria-valuemax="100",style="width: 100%")

            span(class="sr-only") Почекайте

    div(class="panel panel-default",id="courtsDiv")
      div(class="panel-body")
        h2 Результат запитів

        p(id="courtsNamesP") Назви судів скорочено:
          ul(id="courtsNamesUl")

        p Типи справ скорочено:
          ul
            li ЦС — Цивільні справи
            li КС — Кримінальні справи
            li АС — Адміністративні справи
            li СпАП — Справи про адмінпорушення


        p Адреси судів:
          ol(id="courtsAddressList")

        table(class="table table-condensed",id="courtsTable")
          thead
            tr
              th Дата
              th Суддя
              th Номер справи
              th Сторони у справі
              th Суть справи
              th Тип
              th Суд
              th Адреса суду


          tbody(id="courtsTbody")



  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
  script(src="#{glSettings.websiteUrl}/static/bootstrap/js/bootstrap.min.js")


  script(type='text/javascript').
    var regionStr="#{regionId}" ;
    var staticUrl="#{glSettings.websiteUrl}/";

  script(src="#{glSettings.websiteUrl}/static/javascripts/user.js")


